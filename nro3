drop database if exists tareaBase1;
create database tareaBase1;
use tareaBase1;

drop table agenda; 
drop table if exists agenda;

create table agenda(
nombre varchar(20),
domicilio varchar(30),
telefono varchar(11)

)ENGINE InnoDB;

create table agenda;

 show tables;

 describe agenda;

drop table if exists agenda;

/*-----------------------------------------------*/

use tareaBase1;
drop table if exists libros;
create table libros(

	titulo varchar(20),

	autor varchar(30),

	editorial varchar(15)

	)ENGINE InnoDB;

show tables;
describe libros;
 drop table if exists libros;
 drop table libros;
